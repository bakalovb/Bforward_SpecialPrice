<config>
    <tabs>
        <bforward_tab translate="label" module="bforward_special_price">
            <label>Bforward extensions</label>
            <sort_order>100500</sort_order>
        </bforward_tab>
    </tabs>
    <sections>
        <special_price translate="label" module="bforward_special_price">
            <label>Special Price</label>
            <tab>bforward_tab</tab>
            <sort_order>999999</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <form translate="label" module="bforward_special_price">
                    <label>Special Price</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <status translate="label comment">
                            <label>Show on frontend menu?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </status>
                        <item_name>
                            <label>Name for the item</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>required-entry</validate>
                        </item_name>
                    </fields>
                </form>
            </groups>
        </special_price>
    </sections>
</config>